{
  "name": "@yukimemi/fall-source-chronicle",
  "version": "1.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "check": "deno check ./**/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A",
    "ci": "deno task check && deno task lint && deno task fmt --check && deno task test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno task ci",
    "hooks:pre-push": "deno task ci"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "exclude": ["README.md"]
  },
  "lock": false,
  "imports": {
    "@denops/std": "jsr:@denops/std@^8.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/streams": "jsr:@std/streams@^1.0.17",
    "@vim-fall/std": "jsr:@vim-fall/std@^0.14.0"
  }
}
